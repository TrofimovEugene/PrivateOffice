@page
@model PrivateOfficeWebApp.Pages.Teacher.Classes.EditClassModel
@{
    ViewData["Title"] = "EditClass";
}
@* ReSharper disable MarkupTextTypo *@
<div>
    <nav class="navbar" style="background-color: #0866C6">
        <a asp-page="../Courses/IndexCourse" asp-route-id="@Request.Cookies["idTeacher"]" class="navbar-brand" style="color: white">АРМ Преподавателя</a>
        <form method="post" class="form-inline">
            <input class="btn btn-outline-primary my-2 my-sm-0" type="submit" style="background-color:#E5E5E5; color:#0866C6" value="Выйти" asp-page-handler="LogOut" />
        </form>
    </nav>
</div>
<div class="container-fluid mt-3">
    <div class="form-group d-flex bd-highlight mb-3">
        <a asp-page="../Classes/ViewClasses" asp-route-id="@Model.Course.IdCourse" class="btn btn-outline-primary p-2 bd-highlight" style="background-color:#0866C6; color:white">Назад</a>
        <button type="button" class="btn btn-outline-primary ml-auto p-2 bd-highlight" style="background-color:#0866C6; color:white" data-toggle="modal" data-target="#editClassHome">
            Добавить групповое задание
        </button>
    </div>
    <div class="d-flex align-items-end flex-column bd-highlight mb-3">
        <button type="button" class="btn btn-primary mt-1" style="background-color:#0866C6; color:white" data-toggle="modal" data-target="#addPlanClasses">
            Добавить план занятия
        </button>
    </div>
</div>


<div class="col-xl-3  col-md-4 col-sm-6  p-4">
    <div class="card " style="min-height: 300px; border-width:2px; border-radius: 5%; border-color: #0866C6; box-shadow: 0.8em 0.8em 10px rgba(122,122,122,0.5)">
        <div class="card-body">
            <form method="post" class=" d-flex bd-highlight mb-1">
                <input hidden="hidden" type="number" name="id" value="@Model.Class.IdGroup" />
            </form>
            <form method="get">
                <div class="card-university">
                    <div class="d-flex bd-highlight">
                        <h4 class="card-title mr-auto  bd-highlight"> @Html.DisplayFor(model => model.Class.NameClasses)</h4>
                    </div>
                    <hr class="bg-black m-0 pb-3" />
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item card-text p-1 "> <h6>@Html.DisplayFor(model => model.Class.DaysWeek)</h6></li>
                    <li class="list-group-item card-text p-1 ">@Model.Class.DateClasses.ToShortDateString()</li>
                    <li class="list-group-item card-text p-1 ">Аудитория: @Html.DisplayFor(model => model.Class.Cabinet)</li>
                    <li class="list-group-item card-text p-1 ">Занятий в неделю: @Html.DisplayFor(model => model.Class.ReplayClasses)</li>
                    <li class="list-group-item card-text p-1 ">Продолжительность занятия: <br>c @Html.DisplayFor(model => model.Class.StartTime) по @Html.DisplayFor(model => model.Class.EndTime)</li>
                    @if (@Model.HomeworkGroup.IdClasses != null)
                    {
                        <li class="list-group-item card-text p-1 ">Групповое задание: <br> @Html.DisplayFor(model => model.HomeworkGroup.ContentHomeworkGroup)</li>
                    }
                </ul>
            </form>
            <div class="modal-footer m-0 p-0 pt-2">
                <input type="submit" class="btn btn-primary" value="Редактировать" data-toggle="modal" data-target="#editClass">
            </div>
        </div>
    </div>
</div>
@if (Model.PlanClasses != null)
{
<div class="col-xl-3  col-md-4 col-sm-6  p-4">
    <div class="card " style="width: 100%; min-height: 300px; border-width:2px; border-radius: 5%; border-color: #0866C6; box-shadow: 0.8em 0.8em 10px rgba(122,122,122,0.5)">
        <div class="card-body">
            <form method="post" class=" d-flex bd-highlight mb-1">
                <input hidden="hidden" type="number" name="id" value="@Model.PlanClasses.IdPlanClasses" />
                <input hidden="hidden" type="number" name="idClasses" value="@Model.PlanClasses.IdClasses" />
                <input type="submit" class=" btn btn-outline-danger ml-auto p-1 bd-highlight" style="border-radius: 10%;" value="Удалить" asp-page-handler="Delete" />
            </form>
            <form method="get">
                <div class="card-university">
                    <div class="d-flex bd-highlight">
                        <h4 class="card-title mr-auto  bd-highlight"> @Model.PlanClasses.Theme</h4>
                    </div>
                    <hr class="bg-black m-0 pb-3" />
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item card-text p-1 ">Опрос: <br> @Model.PlanClasses.Poll</li>
                    <li class="list-group-item card-text p-1 ">Блок: <br>@Model.PlanClasses.Block</li>
                </ul>
            </form>
            <div class="modal-footer m-0 p-0 pt-2">
                <input type="submit" class="btn btn-primary" value="Редактировать" data-toggle="modal" data-target="#editPlanClasses">
            </div>
            
        </div>
    </div>
</div>
}


<div class="modal fade" id="editPlanClasses" tabindex="-1" role="dialog"
     aria-labelledby="editPlanClasses" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPlanClasses">Редактировать план занятия</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input hidden="hidden" type="number" name="id" value="@Model.PlanClasses.IdPlanClasses" />
                        <input hidden="hidden" type="number" name="idClasses" value="@Model.PlanClasses.IdClasses" />
                    </div>

                    <div class="form-university pt-0 mb-1">
                        <label for="InputTheme">Название темы</label>
                        <input asp-for="PlanClasses.Theme" type="text" class="form-control"
                               id="InputTheme">
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputPoll">Опрос</label>
                        <input asp-for="PlanClasses.Poll" type="text" class="form-control"
                               id="InputPoll">
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputBlock">Блок</label>
                        <input asp-for="PlanClasses.Block" type="text" class="form-control"
                               id="InputBlock">
                    </div>
                    <div class="modal-footer m-0 p-0 pt-2">
                        <input type="submit" class="btn btn-secondary" data-dismiss="modal" value="Закрыть" />
                        <input type="submit" class="btn btn-primary" value="Изменить" asp-page-handler="EditPlanClasses" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addPlanClasses" tabindex="-1" role="dialog"
     aria-labelledby="addPlanClasses" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPlanClasses">Добавить план занятия</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input hidden="hidden" type="number" id="idClasses" name="idClasses" value="@Model.Class.IdClasses" />
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputTheme">Название темы</label>
                        <input asp-for="PlanClasses.Theme" type="text" class="form-control"
                               id="InputTheme">
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputPoll">Опрос</label>
                        <textarea asp-for="PlanClasses.Poll" type="text" class="form-control"
                               id="InputPoll" cols="30" rows="7"></textarea>
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputBlock">Блок</label>
                        <textarea asp-for="PlanClasses.Block" type="text" class="form-control"
                               id="InputBlock" cols="30" rows="7"></textarea>
                    </div>
                    <div class="modal-footer m-0 p-0 pt-2">
                        <input type="submit" class="btn btn-secondary" data-dismiss="modal" value="Закрыть" />
                        <input type="submit" class="btn btn-primary" value="Добавить" asp-page-handler="CreatePlanClasses" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="editClassHome" tabindex="-1" role="dialog"
     aria-labelledby="editClassHome" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editClassHome">Добавить групповое задание</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input hidden="hidden" type="number" id="Idclasses" name="Idclasses" value="@Model.Class.IdClasses" />
                    </div>
                    <div class="form-group">
                        <input hidden="hidden" type="number" id="idgroup" name="idGroup" value="@Model.Class.IdGroup" />
                    </div>

                    <div class="form-university pt-0 mb-1">
                        <label for="InputUniveristy">Название</label>
                        <input asp-for="HomeworkGroup.ContentHomeworkGroup" type="text" class="form-control"
                               id="InputUniveristy">
                    </div>

                    <div class="modal-footer m-0 p-0 pt-2">
                        <input type="submit" class="btn btn-secondary" data-dismiss="modal" value="Закрыть" />
                        <input type="submit" class="btn btn-primary" value="Добавить" asp-page-handler="CreateTask" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editClass" tabindex="-1" role="dialog"
     aria-labelledby="editClassTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editClassTitle">Редактировать занятие</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <input hidden="hidden" type="number" id="idCourse" name="idCourse" value="@Model.Class.IdCourse" />
                    </div>
                    <div class="form-group">
                        <input hidden="hidden" type="number" id="idgroup" name="idgroup" value="@Model.Class.IdGroup" />
                    </div>
                    <div class="form-id">
                        <label hidden="hidden" for="InputIdCourse">Id занятия</label>
                        <input hidden="hidden" asp-for="Class.IdClasses" type="text" class="form-control"
                               id="InputIdCourse">
                    </div>
                    <div class="form-university pt-0 mb-1">
                        <label for="InputUniveristy">Тема занятия</label>
                        <input asp-for="Class.NameClasses" type="text" class="form-control"
                               id="InputUniveristy">
                    </div>
                    <div class="form-typeClass mb-1">
                        <label for="InputGroup">Тип занятия</label>
                        <select class="custom-select" id="TypeClass" name="TypeClass" asp-for="Class.IdTypeClasses">
                            <option value="1" tabindex="1">Лабораторная работа</option>
                            <option value="2" tabindex="2">Лекция</option>
                            <option value="3" tabindex="3">Семинар</option>
                        </select>
                    </div>
                    <div class="form-DateClass">
                        <label>Дата занятия</label>
                        <input asp-for="Class.DateClasses" type="date" class="form-control" id="InputDateClass" />
                    </div>
                    <div class="form-cabinet">
                        <label>Аудитория</label>
                        <input asp-for="Class.Cabinet" type="text" class="form-control" id="InputCabinet" />
                    </div>
                    <div class="form-dayWeek mb-1">
                        <label for="InputUniveristy">День недели</label>
                        <input asp-for="Class.DaysWeek" type="text" class="form-control" id="InputUniveristy" required>
                        <div class="invalid-feedback">
                            Пожалуйста введите день недели
                        </div>
                    </div>
                    <div class="form-nameCourse mb-1">
                        <label for="InputGroup">Время начала</label>
                        <input asp-for="Class.StartTime" type="time" class="form-control" id="InputNameCourse" required>
                        <div class="invalid-feedback">
                            Пожалуйста введите время начала
                        </div>
                    </div>
                    <div class="form-group mb-1">
                        <label for="InputGroup">Время окончания</label>
                        <input asp-for="Class.EndTime" type="time" class="form-control" id="InputGroup" required>
                        <div class="invalid-feedback">
                            Пожалуйста введите время окончания
                        </div>
                    </div>
                    <div class="form-time mb-4">
                        <label for="InputGroup">Периодичность</label>
                        <input asp-for="Class.ReplayClasses" type="text" class="form-control" id="InputTime" required>
                        <div class="invalid-feedback">
                            Пожалуйста введите переодичность
                        </div>
                    </div>
                    @if (@Model.HomeworkGroup.IdClasses != null)
                    {
                        <div class="form-group">
                            <label for="InputGroup">Групповое задание</label>
                            <input type="text" class="form-control" id="InputСountClass" asp-for="HomeworkGroup.ContentHomeworkGroup" required>
                            <div class="invalid-feedback">
                                Пожалуйста введите групповое задание
                            </div>
                            <input hidden="hidden" asp-for="HomeworkGroup.IdHomeworkGroup" name="idHomework" type="text" class="form-control"
                                   id="InputIdCourse">
                            <input hidden="hidden" asp-for="HomeworkGroup.IdGroup" value="@Model.Class.IdGroup" type="text" class="form-control"
                                   id="InputIdCourse">
                            <input hidden="hidden" asp-for="HomeworkGroup.IdClasses" value="@Model.Class.IdClasses" type="text" class="form-control"
                                   id="InputIdCourse">
                        </div>
                    }
                    <div class="modal-footer m-0 p-0 pt-2">
                        <input type="submit" class="btn btn-secondary" data-dismiss="modal" value="Закрыть" />
                        <!-- -->
                        <input type="submit" class="btn btn-primary" value="Редактировать" asp-page-handler="EditClass" />

                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</div>
