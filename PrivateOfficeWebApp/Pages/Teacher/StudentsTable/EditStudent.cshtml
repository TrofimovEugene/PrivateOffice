@page
@model PrivateOfficeWebApp.Pages.Teacher.StudentsTable.EditStudentModel
@{
    ViewData["Title"] = "EditStudent";
}

    <div>
        <nav class="navbar" style="background-color: #0866C6">
            <a href="/Index" class="navbar-brand" style="color: white">АРМ Преподавателя</a>
	        <form method="post" class="form-inline">
		        <input  class="btn btn-outline-primary my-2 my-sm-0" type="submit" style="background-color:#0866C6; color:white;"  value="Выйти" asp-page-handler="LogOut" />
	        </form>
        </nav>
    </div>
    <div class="container-fluid mt-3">
        <div class="form-group d-flex bd-highlight mb-3">
            <input type="button"  class="btn btn-outline-primary p-2 bd-highlight" style="background-color:#0866C6; color:white" onclick="history.back();" value="Назад" />
            <button type="button" class="btn btn-outline-primary ml-auto p-2 bd-highlight" style="background-color:#0866C6; color:white" data-toggle="modal" data-target="#editStudent" aria-label="Edit">
                Редактировать
            </button>
        </div>
        </div>
            <div class="container mt-5"style="border: solid   #0866C6 2px; border-radius:5px; background-color:white">
                <div class="row d-flex justify-content-start align-items-center">
                    <form method="get">
                        <div class="modal-body">
                            <div class="form-university mb-1">
                                <label><strong>Имя:</strong> @Html.DisplayFor(model => model.Student.FirstName)</label>
                            </div>
                            <div class="form-nameCourse mb-1">
                                <label><strong>Фамилия:</strong> @Html.DisplayFor(model => model.Student.SecondName)</label>
                            </div>
                            <div class="form-group mb-1">
                                <label><strong>Группа:</strong> @Html.DisplayFor(model => model.Student.Group.NameGroup)</label>
                            </div>
                            <div class="form-login mb-1">
                                <label><strong>Логин:</strong> @Html.DisplayFor(model => model.Student.Login)</label>
                            </div>
                            <div class="form-password mb-1">
                                <label><strong>Пароль:</strong> @Html.DisplayFor(model => model.Student.Password)</label>
                            </div>

                        </div>
                    </form>
                    <div class="modal fade" id="editStudent" tabindex="-1" role="dialog" aria-labelledby="editStudentTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editStudentTitle">Редактирование</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form method="post" class="needs-validation" novalidate>
                                    <div class="madal-body p-2 m-2">
                                        <div class="form-id">
                                            <label hidden="hidden" for="InputIdStudent">Id студента</label>
                                            <input hidden="hidden" asp-for="Student.IdStudent" type="text" class="form-control" id="InputIdStudent">
                                        </div>
                                        <div class="form-firstName mb-2">
                                            <label for="InputFirstName">Имя</label>
                                            <input asp-for="Student.FirstName" type="text" class="form-control" id="InputFirstName" required>
                                            <div class="invalid-feedback">
                                                Пожалуйста введите имя студента
                                            </div>
                                        </div>
                                        <div class="form-secondName mb-2">
                                            <label for="InputSecondName">Фамилия</label>
                                            <input asp-for="Student.SecondName" type="text" class="form-control" id="InputSecondName" required>
                                            <div class="invalid-feedback">
                                                Пожалуйста введите фамилию студента
                                            </div>
                                        </div>
                                        <div class="form-login mb-2">
                                            <label for="InputLogin">Логин</label>
                                            <input type="text" class="form-control" asp-for="Student.Login" id="InputLogin" required>
                                            <div class="invalid-feedback">
                                                Пожалуйста введите логин
                                            </div>
                                        </div>
                                        <div class="form-password mb-2">
                                            <label for="InputPassword">Пароль</label>
                                            <input type="text" class="form-control" asp-for="Student.Password" id="InputPassword" required>
                                            <div class="invalid-feedback">
                                                Пожалуйста введите пароль
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputGroup">Группа</label>
                                            <select name="idgroup" class="form-control" required>
                                                @if (Model.Groups != null)
                                                {
                                                    @foreach (var group in Model.Groups)
                                                    {
                                                        <option value="@group.IdGroup">@Html.DisplayFor(model => group.NameGroup)</option>
                                                    }
                                                }
                                            </select>
                                            <div class="invalid-feedback">
                                                Пожалуйста введите группу
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                        <!-- -->
                                        <input type="submit" class="btn btn-primary" style="background-color:#0866C6; color:white" value="Принять" asp-page-handler="EditStudent" />
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            var forms = document.getElementsByClassName('needs-validation');
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>

