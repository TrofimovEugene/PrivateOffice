@page
@model IndexCourseModel
@* ReSharper disable MarkupTextTypo *@
<div>
	<nav class="navbar" style="background-color: #0866C6">
		<a class="navbar-brand" style="color: white">АРМ Преподавателя</a>
		<!-- <form class="form-inline">
			<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Войти</button>
		</form> -->
	</nav>
</div>
<div class="container-fluid mt-3">
	<div class="form-group">
		<a type="button" class="btn btn-outline-primary" asp-page="../StudentsTable/ViewGroups">Просмотреть группы</a>
	</div>
	<div class="row">
		@if (Model.Courses != null)
		{
			@foreach (var item in Model.Courses)
			{
				<div class="col-xl-3  col-md-4 col-sm-6  p-4">
					<div class="card " style="min-height: 300px; border-radius: 5%;">
						<div class="card-body">
							<form method="get">
								<div class="card-university">
									<div class="d-flex bd-highlight">
										<h4 class="card-title mr-auto  bd-highlight"> @Html.DisplayFor(indexModel => item.NameUniversity)</h4>
									</div>
									<hr class="bg-black m-0 pb-3"/>
								</div>
								<ul class="list-group list-group-flush">
									<li class="list-group-item card-text p-1 "> <h6>@Html.DisplayFor(indexModel => item.NameCourse)</h6></li>

									<li class="list-group-item card-text p-1 ">@Html.DisplayFor(indexModel => item.Group.NameGroup)</li>
									<li class="list-group-item card-text p-1 ">Продолжительность курса: <br>c @Html.DisplayFor(indexModel => item.StartDate) по @Html.DisplayFor(indexModel => item.EndDate)</li>
									<!--<li class="list-group-item pl-0 pb-0">c @Html.DisplayFor(indexModel => item.StartDate) по @Html.DisplayFor(indexModel => item.EndDate)</li>-->
								</ul>
								<div class="card-group">
									<div class="d-flex bd-highlight">
										<ul class="list-group-item card-group">
											<li>Ближайшее занятие:</li>
                                            <li>@Html.DisplayFor(indexModel => item.Classes[0].NameClasses)</li>
                                            <li>Начало @Html.DisplayFor(indexModel => item.Classes[0].StartTime)</li>
                                            <li>Окончание @Html.DisplayFor(indexModel => item.Classes[0].EndTime)</li>
										</ul>
										
									</div>
								</div>
								<a asp-page="/Teacher/Courses/Edit" asp-route-id="@item.IdCourse">Подробнее</a>
								<!--<a asp-page="/Courses/ViewCourse" asp-route-id="@item.IdCourse">Подробнее</a>-->
							</form>
							<form method="post">
								<input hidden="hidden" type="number" name="id" value="@item.IdCourse"/>
								<input type="submit" value="Удалить" asp-page-handler="Delete"/>
							</form>
						</div>
					</div>
				</div>
			}
		}
		<div class="col-xl-3  col-md-4 col-sm-6  p-4">
			<button type="button" class="btn-outline-primary" style="width: 100%; min-height: 300px;" data-toggle="modal"
			        data-target="#exampleModalCenter">
				<i class="fas fa-plus" style="font-size: 4rem;"></i>
			</button>
			<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
			     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="document">
					<form method="post">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="exampleModalCenterTitle">Добавление нового курса</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">

								<div class="form-university">
									<label for="InputUniveristy">Университет</label>
									<input asp-for="Course.NameUniversity" type="text" class="form-control" id="InputUniveristy">
								</div>

								<div class="form-nameCourse">
									<label for="InputGroup">Название курса</label>
									<input asp-for="Course.NameCourse" type="text" class="form-control" id="InputNameCourse">
								</div>
								<div class="form-group">
									<label  for="InputGroup">Группа</label>
									<select class =" form-control" name="idgroup">
										@foreach (var group in Model.Groups)
										{
											<option value="@group.IdGroup">@Html.DisplayFor(item => group.NameGroup)</option>
										}
									</select>
								</div>
								<div class="form-data">
									<label for="InputCourse">Длительность курса</label>
									<input asp-for="Course.StartDate" type="date" class="form-control mb-2" id="InputStartCourse">
									<input asp-for="Course.EndDate" type="date" class="form-control" id="InputEndCourse">
								</div>
								<div class="form-time">
									<label for="InputGroup">Количество часов</label>
									<input asp-for="Course.CountTime" type="text" class="form-control" id="InputTime">
								</div>

							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
								<input type="submit" class="btn btn-primary" value="Добавить курс" asp-page-handler="CreateCourse"/>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
